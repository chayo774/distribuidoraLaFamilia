extends ../layout/index
block contenido
    div.py-1
        h1.text-3xl.my-1.font-extrabold.text-center Distribuidora 
            span.font-normal La Familia 
        h2.text-center.text-1xl.font-extrabold=pagina

        .mt-1.mx-auto.max-w-md
            .bg-white.py-4.px-4.shadow
                form.space-y-2
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="name") Your name
                        input#nombre.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Your name" type="text" name="name")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="email") Email Registration
                        input#email.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Your email" type="text" name="email")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="password") Password
                        input#password.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Your password" type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="repeat_password") Repeat Password
                        input#repeat_password.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Your password" type="password" name="repeat_password")
                    .flex.items-center.justify-between 
                        a.text-gray-500.text-xs(href="/auth/login") You have an account. Sign in 
                        a.text-gray-500.text-xs(href="/auth/forget-password") Forgot your Password 
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 cursor-pointer" type="submit" value="Create your account")
